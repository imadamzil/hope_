


{% trans_default_domain 'FOSUserBundle' %}





<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">

                <div class="login-container">
                    <div class="center">
                        <h1>
                            <img src="https://www.lesmobiles.com/images/news/orange.gif">
                        </h1>
                        <h4 class="blue" id="id-company-text"> HOPE3K - REGISTER </h4>
                    </div>

                    <div class="space-6"></div>

                    <div class="position-relative">


                        <div id="signup-box" class="signup-box  no-border">
                            <div class="widget-body">
                                <div class="widget-main">
                                    <h4 class="header green lighter bigger">
                                        <i class="ace-icon fa fa-users blue"></i>
                                        New User Registration
                                    </h4>

                                    <div class="space-6"></div>
                                    <p> Enter your details to begin: </p>

                                    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                                    {{ form_widget(form) }}
                                    <div>
                                        <button class="btn btn-white btn-info btn-bold btn-block" type="submit">
                                            <i class="ace-icon fa fa-floppy-o bigger-120 blue"></i>
                                            {{ 'registration.submit'|trans }}
                                        </button>
                                    </div>
                                    {{ form_end(form) }}



                                </div>

                                <div class="toolbar center">
                                    <a href="{{path('fos_user_security_login')}}" class="back-to-login-link">
                                        <i class="ace-icon fa fa-arrow-left"></i>
                                        Se Connecter
                                    </a>
                                </div>
                            </div><!-- /.widget-body -->
                        </div><!-- /.signup-box -->
                    </div><!-- /.position-relative -->

                    <div class="navbar-fixed-top align-right">
                        <br />
                        &nbsp;
                        <a id="btn-login-dark" href="#">Dark</a>
                        &nbsp;
                        <span class="blue">/</span>
                        &nbsp;
                        <a id="btn-login-blur" href="#">Blur</a>
                        &nbsp;
                        <span class="blue">/</span>
                        &nbsp;
                        <a id="btn-login-light" href="#">Light</a>
                        &nbsp; &nbsp; &nbsp;
                    </div>
                </div>

            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.main-content -->
</div><!-- /.main-container -->