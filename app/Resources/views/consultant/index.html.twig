                                        </thead>

                                        <tbody>
                                        {% for consultant in consultants %}

                                            <tr role="row" class="odd">
                                                <td>


                                                    {{ consultant.nom }}


                                                </td>


                                                <td>
                                                    {% if consultant.email is null %}
                                                        --

                                                    {% else %}

                                                        {{ consultant.email }}


                                                    {% endif %}
                                                </td>


                                                <td>
                                                    {% if consultant.adresse is null %}
                                                        --

                                                    {% else %}

                                                        {{ consultant.adresse }}


                                                    {% endif %}

                                                </td>

                                                <td class="hidden-480">
                                                    {% if consultant.tel is null %}
                                                        --
                                                    {% else %}
                                                        {{ consultant.tel }}

                                                    {% endif %}


                                                </td>
                                                <td class="hidden-480">
                                                    {% if consultant.type is null %}
                                                        --
                                                    {% else %}
                                                        {{ consultant.type }}

                                                    {% endif %}


                                                </td>

                                                <td>
                                                    {% if consultant.rib is null %}
                                                        --

                                                    {% else %}

                                                        {{ consultant.rib }}

                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if consultant.echeance is null %}
                                                        --

                                                    {% else %}

                                                        {{ consultant.echeance }}

                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if consultant.autoVirement is null %}
                                                        --

