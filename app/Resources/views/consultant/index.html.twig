                                                            <label class="text-center">
                                                                <input id="gritter-light"
                                                                        {% if consultant.autoVirement == 1 %}

                                                                            checked="checked"

                                                                        {% endif %}
                                                                       value="{{ consultant.autoVirement }}"
                                                                       type="checkbox" data-id="{{ consultant.id }}"
                                                                       class="ace ace-switch ace-switch-5 switch">
                                                                <span class="lbl middle"></span>
                                                            </label>
                                                        </div>





                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if consultant.anciennte is null %}
                                                        --

                                                    {% else %}

                                                        {{ consultant.anciennte }}


                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if consultant.poids is null %}
                                                        --

                                                    {% else %}

                                                        {{ consultant.poids }}


                                                    {% endif %}
