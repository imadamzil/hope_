                <td>{{ echeance.max }}</td>
                <td>
                    <div class="hidden-sm hidden-xs action-buttons">
                        <a class="blue"
                           href="{{ path('echeance_show', { 'id': echeance.id }) }}"
                           title="voir">
                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                        </a>

                        <a class="orange"
                           href="{{ path('echeance_edit', { 'id': echeance.id }) }}"
                           title="modifier">
                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
