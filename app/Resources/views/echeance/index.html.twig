    <h1>Echeance list</h1>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            <a href="{{ path('echeance_new') }}" class="btn btn-white btn-primary btn-block"><i class="fa fa-plus"></i>
                Ajouter une Ã©cheance</a>

        </div>
    </div>
    <hr>

    <table class="table table-detail">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Min</th>
            <th>Condition</th>
            <th>Max</th>
            <th>Actions</th>
        </tr>
