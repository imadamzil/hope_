                    </a>

                    <a href="#" data-action="reload">
                        <i class="ace-icon fa fa-refresh"></i>
                    </a>

                    <a href="#" data-action="collapse">
                        <i class="ace-icon fa fa-chevron-up"></i>
                    </a>

                    <a href="#" data-action="close">
                        <i class="ace-icon fa fa-times"></i>
                    </a>
                </div>
            </div>

            <div class="widget-body">
                <div class="widget-main">

                    <div class="row">
                        <div class="col-xs-12">

                            <div class="clearfix">
                                <div class="pull-right tableTools-container">
                                </div>
                            </div>
                            <div class="table-header">
                                Factures : <a href="{{ path('facture_new') }}"
                                              class="btn btn-white btn-default pull-right"
                                              style="margin-top: 2px;margin-right: 3px;">
                                    <i class="fa fa-plus"></i>
                                    Nouvelle Facture
                                </a>

                            </div>

                            <!-- div.table-responsive -->

                            <!-- div.dataTables_borderWrap -->
                            <div>
                                <div id="dynamic-table_wrapper" class="dataTables_wrapper form-inline ">
                                    <table id="dynamic-table"
                                           class="table table-striped table-bordered table-hover dataTable no-footer text-left"
                                           role="grid" aria-describedby="dynamic-table_info">
                                        <thead style="font-weight: bold;">
                                        <tr role="row">
                                            <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                                colspan="1" style="color: #707070;"
                                                aria-label="Domain: activate to sort column ascending">
                                                Num√©ro
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                                colspan="1" style="color: #707070;"
                                                aria-label="Domain: activate to sort column ascending">
                                                Projet
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1"
                                                colspan="1"
                                                aria-label="Domain: activate to sort column ascending">
                                                Client
                                            </th>
                                            <th class="sorting_desc" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1" colspan="1"
                                                aria-label="Price: activate to sort column ascending"
                                                aria-sort="descending">
                                                consultant
                                            </th>
                                            <th class="sorting_desc" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1" colspan="1"
                                                aria-label="Price: activate to sort column ascending"
                                                aria-sort="descending">
                                                mois
                                            </th>


                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                date
                                            </th>
                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Total Ht
                                            </th>
                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Total TTC
                                            </th>
                                            <th class="hidden-480 sorting" tabindex="0" aria-controls="dynamic-table"
                                                rowspan="1"
                                                colspan="1" aria-label="Status: activate to sort column ascending">
                                                Etat
                                            </th>


                                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="">devise
                                            </th>
                                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="">TOTAL
                                                (DH)
                                            </th>
                                            <th class="sorting_disabled" rowspan="1" colspan="1" aria-label=""></th>

                                        </tr>
                                        </thead>

                                        <tbody>
                                        {% for facture in factures %}

                                            <tr role="row" class="odd">
                                                <td>


                                                    {{ facture.numero }}


                                                </td>
                                                <td>


                                                    {{ facture.projet }}


                                                </td>


                                                <td>
                                                    {% if facture.client is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.client.nom }}


                                                    {% endif %}
                                                </td>
                                                <td>

                                                    {% if facture.consultant is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.consultant }}


                                                    {% endif %}


                                                </td>


                                                <td>
                                                    {% if facture.mois is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.mois }}-{{ facture.year }}



                                                    {% endif %}

                                                </td>

                                                <td class="hidden-480">
                                                    {% if facture.date is null %}
                                                        --
                                                    {% else %}
                                                        {{ facture.date|date('Y-m-d') }}

                                                    {% endif %}


                                                </td>
                                                <td class="hidden-480">
                                                    {% if facture.totalHT is null %}
                                                        --
                                                    {% else %}
                                                        {{ facture.totalHT }}

                                                    {% endif %}


                                                </td>
                                                <td>
                                                    {% if facture.totalTTC is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.totalTTC }}


                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if facture.etat is null %}
                                                        --

                                                    {% else %}
                                                        {% if facture.etat == 'non pay√©' %}
                                                            <span class="label label-warning arrowed arrowed-right"> {{ facture.etat }}</span>
                                                        {% else %}
                                                            <span class="label label-success arrowed arrowed-right"> {{ facture.etat }}</span>
                                                        {% endif %}



                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {% if facture.mission is null %}
                                                        DH

                                                    {% else %}

                                                        {{ facture.mission.devise }}


                                                    {% endif %}
                                                </td>
                                                <td>

                                                    {% if facture.totalDH is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.totalDH }}


                                                    {% endif %}

                                                </td>

                                                <td>
                                                    <div class="hidden-sm hidden-xs action-buttons">
                                                        <a class="blue"
                                                           href="{{ path('facture_show', { 'id': facture.id }) }}"
                                                           title="voir">
                                                            <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                                        </a>


                                                        {% if facture.mission is not null %}
                                                            <a class="grey"
                                                               href="{{ path('facture_print', { 'id': facture.id }) }}"
                                                               title="Imprimer">
                                                                <i class="ace-icon fa fa-print bigger-130"></i>
                                                            </a>
                                                        {% else %}
                                                            <a class="grey"
                                                               href="{{ path('facture_print_projet', { 'id': facture.id }) }}"
                                                               title="Imprimer">
                                                                <i class="ace-icon fa fa-print bigger-130"></i>
                                                            </a>
                                                        {% endif %}
                                                        {% if facture.documentName is null %}
                                                            <a class="red"
                                                               href="{{ path('facture_sheet', { 'id': facture.id }) }}"
                                                               title="Uploader le timesheet">
                                                                <i class="ace-icon fa fa-cloud-upload bigger-130"></i>
                                                            </a>
                                                        {% else %}
                                                            <a title="T√©l√©charger le Timesheet" class="purple"
                                                               href="{{ asset('uploads/documents/')~facture.documentName }}">
                                                                <i class="ace-icon fa fa-download bigger-130"></i>
                                                            </a>
                                                        {% endif %}
                                                        {% if is_granted('ROLE_MANAGER') %}
                                                        <a class="orange"
                                                           href="{{ path('facture_edit', { 'id': facture.id }) }}"
                                                           title="modifier">
                                                            <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                        </a>
                                                        {% if facture.mission is not null and facture.mission.devise !='DH' and facture.mission.devise is not null and facture.totalDH is null %}

                                                        <a href="#my-moda{{ facture.id }}" role="button" class=""
                                                           data-toggle="modal">
                                                            <i class="ace-icon fa fa-exchange bigger-100 purple"></i>
                                                        </a>
                                                        <div id="my-moda{{ facture.id }}" class="modal fade"
                                                             tabindex="-1">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close"
                                                                                data-dismiss="modal"
                                                                                aria-hidden="true">&times;
                                                                        </button>
                                                                        <h3 class="smaller lighter blue no-margin">
                                                                            {{ facture.totalTTC }} {{ facture.mission.devise }}
                                                                            -> DH </h3>
                                                                    </div>

                                                                    <div class="modal-body">


                                                                        <input type="hidden" id="id_val{{ facture.id }}"
                                                                               value="{{ facture.id }}"
                                                                               class="form-control">
                                                                        <input type="text" id="montant{{ facture.id }}"
                                                                               placeholder="Total en DH"
                                                                               class="form-control">

                                                                    </div>

                                                                    <div class="modal-footer">
                                                                        <button class="btn btn-sm btn-success ok pull-right"
                                                                                id="{{ facture.id }}">
                                                                            <i class="ace-icon fa fa-check"></i>
                                                                            Enregistrer
                                                                        </button>
                                                                        <button class="btn btn-sm btn-danger pull-left"
                                                                                data-dismiss="modal">
                                                                            <i class="ace-icon fa fa-times"></i>
                                                                            Close
                                                                        </button>
                                                                    </div>
                                                                </div><!-- /.modal-content -->
                                                            </div><!-- /.modal-dialog -->
                                                        </div>
                                                    </div>

                                                    {% endif %}
                                                    {% if facture.etat !='pay√©' %}

                                                        <a href="{{ path('facture_payer', { 'id': facture.id }) }}" onclick="return confirm('Etes Vous sur que cette Facture est pay√©e ?');"
                                                           class="tooltip-error" data-rel="tooltip"
                                                           title="" id=""
                                                           data-original-title="-> DH">
																				<span class="green">
																					<i class="ace-icon fa fa-check-square bigger-120"></i>
																				</span>
                                                        </a>

                                                    {% endif %}
                                                    {% endif %}

                                                    <div class="hidden-md hidden-lg">
                                                        <div class="inline pos-rel">
                                                            <button class="btn btn-minier btn-yellow dropdown-toggle"
                                                                    data-toggle="dropdown"
                                                                    data-position="auto">
                                                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                            </button>

                                                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                                <li>
                                                                    <a href="#" class="tooltip-info" data-rel="tooltip"
                                                                       title=""
                                                                       data-original-title="View">
                                                    <span class="blue">
                                                        <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                    </span>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a href="#" class="tooltip-success"
                                                                       data-rel="tooltip" title=""
                                                                       data-original-title="Edit">
																				<span class="green">
																					<i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
																				</span>
                                                                    </a>
                                                                </li>

                                                                <li>
                                                                    <a href="#" class="tooltip-error" data-rel="tooltip"
                                                                       title=""
                                                                       data-original-title="Delete">
																				<span class="red">
																					<i class="ace-icon fa fa-trash-o bigger-120"></i>
																				</span>
                                                                    </a>
                                                                </li>


                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}

                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    </div>



{% endblock %}
