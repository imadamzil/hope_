                                        </thead>

                                        <tbody>
                                        {% for facture in factures %}

                                            <tr role="row" class="odd text-center">
                                                <td>


                                                    {{ facture.numero }}


                                                </td>
                                                <td>


                                                    {{ facture.projet }}


                                                </td>


                                                <td>
                                                    {% if facture.client is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.client.nom }}


                                                    {% endif %}
                                                </td>
                                                <td>

                                                    {% if facture.consultant is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.consultant }}


                                                    {% endif %}


                                                </td>


                                                <td>
                                                    {% if facture.mois is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.mois }}-{{ facture.year }}



                                                    {% endif %}

                                                </td>
                                                <td>
                                                    {% if facture.nbjour is null %}


                                                    {% else %}

                                                        {{ facture.nbjour }}


                                                    {% endif %}
                                                </td>
                                                <td class="hidden-480">
                                                    {% if facture.date is null %}
                                                        --
                                                    {% else %}
                                                        {{ facture.date|date('Y-m-d') }}

                                                    {% endif %}


                                                </td>
                                                <td class="hidden-480">
                                                    {% if facture.totalHT is null %}
                                                        --
                                                    {% else %}
                                                        {{ facture.totalHT }}

                                                    {% endif %}


                                                </td>
                                                <td>
                                                    {% if facture.totalTTC is null %}
                                                        --

                                                    {% else %}

                                                        {{ facture.totalTTC }}


                                                    {% endif %}
