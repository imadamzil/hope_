                                                            <a class="grey"
                                                               href="{{ path('facture_print_hs', { 'id': facture.id }) }}"
                                                               title="Imprimer">
                                                                <i class="ace-icon fa fa-print bigger-130"></i>
                                                            </a>
                                                        {% endif %}
                                                        {% if facture.projet is not null %}
                                                            <a class="grey"
                                                               href="{{ path('facture_print_projet', { 'id': facture.id }) }}"
                                                               title="Imprimer">
                                                                <i class="ace-icon fa fa-print bigger-130"></i>
                                                            </a>
                                                        {% endif %}
