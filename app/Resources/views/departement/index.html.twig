{% extends 'base.html.twig' %}

{% block content %}
    <h1>Departements list</h1>
    <div class="row">
        <div class="col-md-3 col-md-offset-9">
            <a href="{{ path('departement_new') }}" class="btn btn-white btn-primary btn-block"><i
                        class="fa fa-plus-circle"></i> Ajouteur un Departement</a>
        </div>
    </div>
    <hr>
    <table class="table table-striped table-bordered table-hover dataTable no-footer text-left">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Tel</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td><a href="{{ path('departement_show', { 'id': departement.id }) }}">{{ departement.id }}</a></td>
                <td>{{ departement.nom }}</td>
                <td>{{ departement.email }}</td>
                <td>{{ departement.tel }}</td>
                <td>

                    <a href="{{ path('departement_show', { 'id': departement.id }) }}"><i class="fa fa-search-plus bigger-140 "></i></a>


                    <a href="{{ path('departement_edit', { 'id': departement.id }) }}"><i class="fa fa-edit orange"></i></a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
