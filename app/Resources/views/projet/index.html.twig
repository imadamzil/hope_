{% extends 'base.html.twig' %}

{% block title %} Hope3k | Projet {% endblock %}{% block menu %}  <a href="{{ path('projet_index') }}">Projet</a>   {% endblock %}
{% block menu_active %}    Liste {% endblock %}{% block content %}
    <h3> Liste des Projets</h3>
    <hr>
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Statut</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td><a href="{{ path('projet_show', { 'id': projet.id }) }}">{{ projet.id }}</a></td>
                <td>{{ projet.nom }}</td>
                <td>{{ projet.statut }}</td>
                <td>{% if projet.dateDebut %}{{ projet.dateDebut|date('Y-m-d') }}{% endif %}</td>
                <td>{% if projet.dateFin %}{{ projet.dateFin|date('Y-m-d') }}{% endif %}</td>
                <td>

                            <a href="{{ path('projet_show', { 'id': projet.id }) }}"><i class="fa fa-eye blue bigger-160" title="voir"></i></a>

                            <a href="{{ path('projet_edit', { 'id': projet.id }) }}"><i class="fa fa-edit orange bigger-160" title="Modifier"></i></a>

                            <a href="{{ path('projet_facturation', { 'id': projet.id }) }}"><i class="fa fa-money green bigger-160" title="Facturer"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


            <a href="{{ path('projet_new') }}" class="col-sm-3 btn btn-white btn-purple ">Nouveau Projet</a>

{% endblock %}
