{% extends 'base.html.twig' %}

{% block title %} Hope3k | Projet {% endblock %}{% block menu %}  <a
        href="{{ path('projet_index') }}">Projet</a>   {% endblock %}
{% block menu_active %}    Détails {% endblock %}{% block content %}


    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->


            <div class="hr dotted"></div>


            <div class="">
                <div id="user-profile-2" class="user-profile">
                    <div class="tabbable">


                        <div class="tab-content no-border padding-24">
                            <div id="home" class="tab-pane active">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-3 center">


                                        <div class="space space-4"></div>

                                        <a href="#" class="btn btn-sm btn-block btn-success">
                                            <i class="ace-icon fa fa-plus-circle bigger-120"></i>
                                            <span class="bigger-110">Affectuer un consultant</span>
                                        </a>
                                        {% if projet.statut =='Terminé' %}

                                        {% else %}
                                            <a href="{{ path('projet_end', { 'id': projet.id }) }}"
                                               class="btn btn-sm btn-block btn-primary">
                                                <i class="ace-icon fa fa-close bigger-110"></i>
                                                <span class="bigger-110">Marquer comme terminé</span>
                                            </a>
                                        {% endif %}
                                    </div><!-- /.col -->

                                    <div class="col-xs-12 col-sm-9">
                                        <h4 class="blue">
                                            <span class="middle">{{ projet.nom }}</span>
                                            {% if projet.statut == 'Terminé' %}


                                                <span class="label label-danger pull-right">

                                                <i class="ace-icon fa fa-close smaller-80 align-middle"></i>
                                                    {{ projet.statut }}

												</span>


                                            {% else %}
                                                <span class="label label-info pull-right">

                                                <i class="ace-icon fa fa-circle smaller-80 align-middle"></i>
                                                    {{ projet.statut }}

												</span>
                                            {% endif %}
                                        </h4>

                                        <div class="profile-user-info">


                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> BC clinet</div>

                                                <div class="profile-info-value">


                                                    <span>
                                                        {% if projet.bcclient is null %}
                                                            --
                                                        {% else %}
                                                           BC_ {{ projet.bcclient.client.nom }}
                                                        {% endif %}

                                                    </span>
                                                </div>
                                            </div>


                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Début</div>

                                                <div class="profile-info-value">
                                                    <span>{% if projet.dateDebut %}{{ projet.dateDebut|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Fin</div>

                                                <div class="profile-info-value">
                                                    <span>{% if projet.dateFin %}{{ projet.dateFin|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>

                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Création</div>

                                                <div class="profile-info-value">
                                                    <span>{% if projet.createdAt %}{{ projet.createdAt|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>
                                            <div class="profile-info-row">
                                                <div class="profile-info-name"> Date Modification</div>

                                                <div class="profile-info-value">
                                                    <span>{% if projet.updatedAt %}{{ projet.updatedAt|date('Y-m-d') }}{% endif %}</span>
                                                </div>
                                            </div>
                                        </div>


                                    </div><!-- /.col -->
                                </div><!-- /.row -->

                                <div class="space-20"></div>

                                <div class="col-sm-8 col-sm-offset-2">
                                    <div class="widget-box transparent" id="recent-box">
                                        <div class="widget-header">
                                            <h4 class="widget-title lighter smaller">
                                                <i class="ace-icon fa fa-info blue"></i>Info
                                            </h4>

                                            <div class="widget-toolbar no-border">
                                                <ul class="nav nav-tabs" id="recent-tab">
                                                    <li class="active">
                                                        <a data-toggle="tab" href="#task-tab" aria-expanded="true">Consultants</a>
                                                    </li>

                                                    <li class="">
                                                        <a data-toggle="tab" href="#member-tab" aria-expanded="false">Factures</a>
                                                    </li>


                                                </ul>
                                            </div>
                                        </div>

                                        <div class="widget-body">
                                            {% if projet.projetconsultants | length == 0 %}

                                                <div class="alert alert-warning">
                                                    Pas de Consultants pour ce projet
                                                </div>
                                            {% else %}

                                                <div class="widget-main padding-4">
                                                    <div class="tab-content padding-8">
                                                        <div id="task-tab" class="tab-pane active">
                                                            <h4 class="smaller lighter green">
                                                                <i class="ace-icon fa fa-list"></i>
                                                                Liste des consultants
                                                            </h4>
                                                            <table id="dynamic-table"
                                                                   class="table table-striped table-bordered table-hover dataTable no-footer text-left"
                                                                   role="grid" aria-describedby="dynamic-table_info">
                                                                <thead style="font-weight: bold;">
                                                                <tr role="row">
                                                                    <th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1" style="color: #707070;"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Poste
                                                                    </th><th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1" style="color: #707070;"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Consultant
                                                                    </th>
                                                                    <th class="sorting" tabindex="0"
                                                                        aria-controls="dynamic-table" rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Domain: activate to sort column ascending">
                                                                        Fournisseur
                                                                    </th>
                                                                    <th class="sorting_desc" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1" colspan="1"
                                                                        aria-label="Price: activate to sort column ascending"
                                                                        aria-sort="descending">
                                                                        Prix Achat
                                                                    </th>
                                                                    <th class="sorting_desc" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1" colspan="1"
                                                                        aria-label="Price: activate to sort column ascending"
                                                                        aria-sort="descending">
                                                                        Prix Vente
                                                                    </th>


                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        type
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        salaire
                                                                    </th>
                                                                    <th class="hidden-480 sorting" tabindex="0"
                                                                        aria-controls="dynamic-table"
                                                                        rowspan="1"
                                                                        colspan="1"
                                                                        aria-label="Status: activate to sort column ascending">
                                                                        rib
                                                                    </th>


                                                                    <th class="sorting_disabled" rowspan="1" colspan="1"
                                                                        aria-label=""></th>

                                                                </tr>
                                                                </thead>

                                                                <tbody>
                                                                {% for item in projet.projetconsultants %}

                                                                    <tr role="row" class="odd">
                                                                        <td>


                                                                            {{ item.job }}


                                                                        </td>

                                                                        <td>


                                                                            {{ item.consultant }}


                                                                        </td>


                                                                        <td>
                                                                            {% if item.fournisseur is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ item.fournisseur.nom }}


                                                                            {% endif %}
                                                                        </td>


                                                                        <td>
                                                                            {% if item.achat is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ item.achat }}


                                                                            {% endif %}

                                                                        </td>

                                                                        <td class="hidden-480">
                                                                            {% if item.vente is null %}
                                                                                --
                                                                            {% else %}
                                                                                {{ item.vente }}

                                                                            {% endif %}


                                                                        </td>
                                                                        <td class="hidden-480">
                                                                            {% if item.consultant is null %}
                                                                                --
                                                                            {% else %}
                                                                                {{ item.consultant.type }}

                                                                            {% endif %}


                                                                        </td>
                                                                        <td>
                                                                            {% if item.consultant is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ item.consultant.salaire }}


                                                                            {% endif %}
                                                                        </td>
                                                                        <td>
                                                                            {% if item.consultant is null %}
                                                                                --

                                                                            {% else %}

                                                                                {{ item.consultant.rib }}

                                                                            {% endif %}
                                                                        </td>

                                                                        <td>
                                                                            <div class="hidden-sm hidden-xs action-buttons">
                                                                                <a class="blue"
                                                                                   href="{{ path('projetconsultant_show', { 'id': item.id }) }}"
                                                                                   title="voir">
                                                                                    <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                                                                </a>

                                                                                <a class="orange"
                                                                                   href="{{ path('projetconsultant_edit', { 'id': item.id }) }}"
                                                                                   title="modifier">
                                                                                    <i class="ace-icon fa fa-pencil bigger-130"></i>
                                                                                </a>


                                                                                <a class="red" href=""
                                                                                   onclick="return confirm('vous êtes sûr que vous voulez le supprimé?');">
                                                                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                                                                </a>

                                                                            </div>

                                                                            <div class="hidden-md hidden-lg">
                                                                                <div class="inline pos-rel">
                                                                                    <button class="btn btn-minier btn-yellow dropdown-toggle"
                                                                                            data-toggle="dropdown"
                                                                                            data-position="auto">
                                                                                        <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                                                    </button>

                                                                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="tooltip-info"
                                                                                               data-rel="tooltip"
                                                                                               title=""
                                                                                               data-original-title="View">
                                                    <span class="blue">
                                                        <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                    </span>
                                                                                            </a>
                                                                                        </li>

                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="tooltip-success"
                                                                                               data-rel="tooltip"
                                                                                               title=""
                                                                                               data-original-title="Edit">
																				<span class="green">
																					<i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
																				</span>
                                                                                            </a>
                                                                                        </li>

                                                                                        <li>
                                                                                            <a href="#"
                                                                                               class="tooltip-error"
                                                                                               data-rel="tooltip"
                                                                                               title=""
                                                                                               data-original-title="Delete">
																				<span class="red">
																					<i class="ace-icon fa fa-trash-o bigger-120"></i>
																				</span>
                                                                                            </a>
                                                                                        </li>
                                                                                    </ul>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                                    </tr>
                                                                {% endfor %}

                                                                </tbody>

                                                            </table>


                                                        </div>

                                                        <div id="member-tab" class="tab-pane">

                                                        </div><!-- /.#member-tab -->


                                                    </div>
                                                </div><!-- /.widget-main -->

                                            {% endif %}
                                        </div><!-- /.widget-body -->
                                    </div><!-- /.widget-box -->
                                </div>
                            </div><!-- /#home -->


                        </div>
                    </div>
                </div>
            </div>


            <!-- PAGE CONTENT ENDS -->


        </div>
    </div>
{% endblock %}
