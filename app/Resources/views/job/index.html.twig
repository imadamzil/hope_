{% extends 'base.html.twig' %}

{% block content %}
    <h1 class="text-center">Jobs list</h1>

    <div class="row">
        <div class="col-md-3 col-md-offset-9">
            <a href="{{ path('job_new') }}" class="btn btn-white btn-primary btn-block"><i
                        class="fa fa-plus-circle"></i> Ajouteur un job</a>
        </div>
    </div>
    <hr>
    <table class="table table-striped table-bordered table-hover dataTable no-footer text-left">
        <thead>
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td><a href="{{ path('job_show', { 'id': job.id }) }}">{{ job.id }}</a></td>
                <td>{{ job.nom }}</td>
                <td>
                    <a href="{{ path('job_show', { 'id': job.id }) }}"><i class="fa fa-search-plus bigger-140"></i></a>


                    <a href="{{ path('job_edit', { 'id': job.id }) }}"><i class="fa fa-edit bigger-140 orange"></i></a>


                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
